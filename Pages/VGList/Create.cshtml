@page
@model VGListRazor.Pages.VGList.CreateModel

<br />
<h2 class="text-info">Create a new game</h2>
<br />

<div class="border container" style="padding: 30px;">
    <form method="POST">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Game.Name"></label>
            </div>
            <div class="col-6">
                <label asp-for="Game.Name" class="form-control"></label>
            </div>
            <span asp-validation-for="Game.Name" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Game.platform"></label>
            </div>
            <div class="col-6">
                <label asp-for="Game.platform" class="form-control"></label>
            </div>
            <span asp-validation-for="Game.platform" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Game.publisher"></label>
            </div>
            <div class="col-6">
                <label asp-for="Game.publisher" class="form-control"></label>
            </div>
            <span asp-validation-for="Game.publisher" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3 offset-3">
                <input type="submit" value="Create" class="btn btn-primary form-control" />
            </div>
            <div class="col-3">
                <a asp-page="Index" class="btn btn-success form-control">Back to list</a>
            </div>
        </div>
    </form>
</div>